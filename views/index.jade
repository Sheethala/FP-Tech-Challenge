doctype 5
html.
	<head>
		<meta charset="utf8">
		<base href="/">
		<title>Fresh Prints Tech Challenge</title>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css">
		<link rel="stylesheet" href="/css/app.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	</head>
	<body>
		<div ng-app="myApp">
			<div ng-controller="AppCtrl">
				<div class="wrapper-div">
				<div class="heading-image">
				</div>
			</div>
			<div>
				<h1 class="heading-font">Get Apparel Quote</h1>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="form-group col-sm-6">
						<label class="label-text">Style Code</label>
						<input type="text" class="form-control" ng-model="style_code">
					</div>
					<div class="form-group col-sm-6">
						<label class="label-text">Apparel Color</label>
						<input type="text" class="form-control" ng-model="style_color">
					</div>
				</div>
				<div class="col-sm-12">
					<div class="form-group col-sm-6">
						<label class="label-text">Apparel Size</label>
						<input type="text" class="form-control" ng-model="style_size">
					</div>
					<div class="form-group col-sm-6">
						<label class="label-text">Quantity</label>
						<input type="text" class="form-control" ng-model="quantity">
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12 button-align">
				<button type="button" class="btn btn-primary button-size" ng-click="getQuote()">Get Quote!</button>
			</div>
			</div>
				<h2>The final Price is {{finalPrice}}</h2>
				<h3>The price per item is {{itemPrice}}</h3>
		</div>
			<!-- INSERT HTML CODE HERE -->
			<script src="js/lib/angular/angular.js"></script>
			<script src="js/app.js"></script>
			<script src="js/services.js"></script>
			<script src="js/controllers.js"></script>
			<script src="js/filters.js"></script>
			<script src="js/directives.js"></script>
	</body>
